   public static void makePoints(ArrayList<Point> cities, Graphics g, Scanner input) {
      int cityCount = input.nextInt();
      for (int i = 0; i < cityCount; i++) {
         Point p = new Point(input.nextInt(), input.nextInt());
         cities.add(p);
         p.draw(g);
      }
   }
   
